{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gallery.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ gallery.slug }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ gallery.path }}</td>
            </tr>
            <tr>
                <th>Date creation</th>
                <td>{{ gallery.dateCreation ? gallery.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
					{% for image in gallery.images %}
                        <img src="{{ asset('uploads/gallery/' ~ gallery.path ~ image.filename) }}"
                             alt="" height="300">
                        {% include('gallery/_delete_image.html.twig') %}
					{% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    {{ form_start(form) }}
    {{ form_row(form.filename) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    <button type="submit">Ajouter une image</button>
    {{ form_end(form) }}

    <a href="{{ path('gallery_index') }}">back to list</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
