<form method="post" action="{{ path('image_gallery_delete', {'gallery': gallery.id, 'image': field.vars['value'].id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ field.vars['value'].id) }}">
	<button class="btn">Delete image</button>
</form>
