{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/home_css.css') }}">
{% endblock %}
{% block body %}
	{% if slides is defined and slides|length != 0 %}
		{% include "default/home/_slider.html.twig" %}
	{% endif %}
	{% if result is defined and result is not null %}
		{% set games = result.games %}
		<div class="page__header">
			<h2>Resultats des matchs du {{ result.meetingDate }}</h2>
		</div>
		<section class="container">
			<div class="last__results flex_row">
				{% include "default/home/_result_table.html.twig" %}
			</div>
		</section>
	{% endif %}
	{% if games is defined and games is not null %}
		<div class="page__header">
			<h2>Prochains matchs</h2>
		</div>
		<section class="flex_row container home__next__matchs">
			{% set games = meeting.games %}
			{% include "default/home/_next_matchs.html.twig" %}
		</section>
	{% endif %}
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('build/home_js.js') }}"></script>
{% endblock %}