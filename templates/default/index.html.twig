{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/home_css.css') }}">
{% endblock %}
{% block body %}
	{% if slides is defined and slides|length != 0 %}
		<div class="slider__container">
			<div id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:1300px;height:500px;overflow:hidden;visibility:hidden;">
				<div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:1300px;height:500px;overflow:hidden;">
					{% for s in slides %}
						<div>
							<img data-u="image" src="{{ asset('uploads/slides/' ~ s.image) }}" />
						</div>
					{% endfor %}
				</div>
				<!-- Bullet Navigator -->
				<div data-u="navigator" class="jssorb032" style="position:absolute;bottom:12px;right:12px;" data-autocenter="1" data-scale="0.5" data-scale-bottom="0.75">
					<div data-u="prototype" class="i" style="width:16px;height:16px;">
						<svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
							<circle class="b" cx="8000" cy="8000" r="5800"></circle>
						</svg>
					</div>
				</div>
				<!-- Arrow Navigator -->
				<div data-u="arrowleft" class="jssora051" style="width:65px;height:65px;top:0px;left:25px;" data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
					<svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
						<polyline class="a" points="11040,1920 4960,8000 11040,14080 "></polyline>
					</svg>
				</div>
				<div data-u="arrowright" class="jssora051" style="width:65px;height:65px;top:0px;right:25px;" data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
					<svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
						<polyline class="a" points="4960,1920 11040,8000 4960,14080 "></polyline>
					</svg>
				</div>
			</div>
		</div>
	{% endif %}
	<section class="flex_row full_width home__info">
		<div class="home__next__match">
			<h2>Prochains matchs</h2>
			<div class="next__match__teams">
				<p>Forges-les-Eaux VS Gournay</p>
			</div>
			<div class="next__match__timer flex_row">
				<div class="timer__box flex_column">
					<span class="timer__numeric">20</span>
					<span class="timer__text">jours</span>
				</div>
				<div class="timer__box flex_column">
					<span class="timer__numeric">06</span>
					<span class="timer__text">heures</span>
				</div>
				<div class="timer__box flex_column">
					<span class="timer__numeric">30</span>
					<span class="timer__text">minutes</span>
				</div>
				<div class="timer__box flex_column">
					<span class="timer__numeric">30</span>
					<span class="timer__text">secondes</span>
				</div>
			</div>
		</div>
	</section>
	<section class="flex_row full_width home__info">
		<div class="last__result flex_column">
			<h2>RÃ©sultats derniers matchs</h2>
			<div class="last__result__teams flex_row">
				<div class="last__result_team_first">
					<img src="images/rams-128x128.png" alt="Rams">
				</div>
				<div class="last__result__info flex_column">
					<span class="last__result__info__date">September 28, 2018</span>
					<span class="last__result__info__score">0 - 2</span>
				</div>
				<div class="last__result_team_second">
					<img src="images/tigers-115x128.png" alt="Tigers">
				</div>
			</div>
			<div class="last__result__label">Rams VS Tigers</div>
		</div>
	</section>

	Prochains matchs
	Sponsors
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('build/home_js.js') }}"></script>
{% endblock %}