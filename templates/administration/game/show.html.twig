{% extends 'administration/admin.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Match_date</th>
                <td>{{ game.matchDate ? game.matchDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ game.location }}</td>
            </tr>
            <tr>
                <th>Opponent</th>
                <td>{{ game.opponent }}</td>
            </tr>
            <tr>
                <th>Winner</th>
                <td>{{ game.winner }}</td>
            </tr>
            <tr>
                <th>Looser</th>
                <td>{{ game.looser }}</td>
            </tr>
            <tr>
                <th>Winner_score</th>
                <td>{{ game.winnerScore }}</td>
            </tr>
            <tr>
                <th>Looser_score</th>
                <td>{{ game.looserScore }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

	{% if game.winner != null %}
        <a href="{{ path('game_validate', {'id': game.id}) }}">validate</a>
	{% endif %}

    {{ include('administration/game/_delete_form.html.twig') }}
{% endblock %}
