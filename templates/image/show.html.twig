{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ image.path }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% set image_link = image.path ~ "/" ~ image.filename ~ "." ~ image.extension %}
                    <img src="{{ image_link }}" alt="">
                    <img src="{{ asset('uploads/players/' ~ image.filename ~ "." ~ image.extension) }}" alt="">
                </td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ image.filename }}</td>
            </tr>
            <tr>
                <th>Extension</th>
                <td>{{ image.extension }}</td>
            </tr>
            <tr>
                <th>Mime_type</th>
                <td>{{ image.mimeType }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ image.size }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('image_index') }}">back to list</a>

    <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
